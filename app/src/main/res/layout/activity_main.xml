<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topGUI"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/game_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/action_buttons"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/help_Button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="How to Play" />

            <Button
                android:id="@+id/endTurn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="End Turn" />

            <Button
                android:id="@+id/trade2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Trade 2 Off" />

            <Button
                android:id="@+id/trade3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Trade 3 Off" />

            <Button
                android:id="@+id/trade5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Trade 5 Off" />

            <Button
                android:id="@+id/enter"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Enter" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/playing_field"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/playerlog_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="horizontal"
                    android:layout_marginTop="5sp">

                    <TextView
                        android:id="@+id/turntext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:autoSizeTextType="uniform"
                        android:inputType="textMultiLine"
                        android:text="TextView"
                        android:textSize="@dimen/playerlog_text"
                        android:textColor="#000000"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/player2_format"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/player2_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/player2_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:text="Player 2" />

                        <TextView
                            android:id="@+id/player2cards"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:text="TextView" />

                        <ImageButton
                            android:id="@+id/player2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:background="#FFFFFF"
                            android:maxHeight="120dip"
                            android:minHeight="100dip"
                            android:scaleType="fitCenter"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/cardback"
                            tools:srcCompat="@drawable/cardback" />
                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/turn_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/playerTurn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:inputType="textMultiLine"
                        android:text="TextView"
                        android:layout_marginRight="@dimen/help_menu_card_spacing"
                        android:textColor="@color/black"
                        android:textSize="40sp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/middle_of_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"

                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/player1_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/player1_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="#000000"
                                android:text="Player 1" />

                            <TextView
                                android:id="@+id/player1cards"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="#000000"
                                android:text="TextView" />

                        </LinearLayout>

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/player1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="#FFFFFF"
                        android:maxHeight="150dip"
                        android:minHeight="130dip"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/cardback"
                        tools:srcCompat="@drawable/cardback" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardpile_and_deck"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/customborder"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/discardPile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="47dip"
                        android:layout_marginTop="20dip"
                        android:layout_marginRight="47dip"
                        android:layout_marginBottom="20dip"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="#FFFFFF"
                        android:maxHeight="120dip"
                        android:minHeight="100dip"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/cardpile"
                        tools:srcCompat="@drawable/cardpile" />

                    <ImageButton
                        android:id="@+id/deck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="47dip"
                        android:layout_marginTop="20dip"
                        android:layout_marginRight="10dip"
                        android:layout_marginBottom="20dip"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="#FFFFFF"
                        android:maxHeight="120dip"
                        android:minHeight="100dip"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/cardback"/>

                    <TextView
                        android:id="@+id/cardsindeck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:text="TextView" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/player3_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/player3_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="#000000"
                                android:text="Player 3" />

                            <TextView
                                android:id="@+id/player3cards"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="#000000"
                                android:text="TextView" />

                        </LinearLayout>

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/player3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="#FFFFFF"
                        android:maxHeight="150dip"
                        android:minHeight="130dip"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/cardback"
                        tools:src="@drawable/cardback" />


                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/player0cards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#000000"
                android:text="TextView" />

            <TextView
                android:id="@+id/cardstodraw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#000000"
                android:text="TextView" />

            <TextView
                android:id="@+id/displayCards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FF0000"
                android:text="TextView" />

            <LinearLayout
                android:id="@+id/your_hand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"

                android:orientation="horizontal">

                <Button
                    android:id="@+id/leftScroll"
                    android:layout_width="1dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Scroll Left" />

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@color/game_background"
                    android:minHeight="100dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/blankcard" />

                <ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@color/game_background"
                    android:minHeight="100dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/blankcard"/>

                <ImageButton
                    android:id="@+id/imageButton7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@color/game_background"
                    android:minHeight="100dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/blankcard" />

                <ImageButton
                    android:id="@+id/imageButton8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@color/game_background"
                    android:minHeight="100dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/blankcard"/>

                <ImageButton
                    android:id="@+id/imageButton9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@color/game_background"
                    android:minHeight="100dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/blankcard"/>

                <Button
                    android:id="@+id/rightScroll"
                    android:layout_width="1dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Scroll Right" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
